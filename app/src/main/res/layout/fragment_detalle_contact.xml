<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetalleContact">

    <LinearLayout
        android:layout_width="427dp"
        android:layout_height="221dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="19dp"
        android:background="#323535"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/producto_imagen"
            android:layout_width="140dp"
            android:layout_height="103dp"
            android:layout_marginLeft="115dp"
            app:srcCompat="@drawable/user_h" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="138dp"
                android:layout_height="113dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productos_titulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Nombre"
                    android:textColor="#FBFBFB"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/productos_subtitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Apellido:"
                    android:textColor="#FBFBFB"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/producto_precio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Telefono:"
                    android:textColor="#FBFBFB"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/producto_precio2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Email:"
                    android:textColor="#FBFBFB"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/producto_precio4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Profesion:"
                    android:textColor="#FBFBFB"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="247dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="219dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#040303"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/txt_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#040303"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#040303"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#040303"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_profe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="#040303"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>






</FrameLayout>